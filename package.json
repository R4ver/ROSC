{
    "name": "rosc",
    "version": "0.1.0",
    "license": "MIT",
    "main": "main/app.js",
    "author": "R4ver",
    "description": "A bundle of cool things for VRChat, mainly using OSC to enhance the creativity of avatars.",
    "keywords": [
        "vrchat",
        "osc",
        "electron",
        "typescript"
    ],
    "repository": {
        "url": "git@github.com:R4ver/ROSC.git"
    },
    "productName": "rosc",
    "scripts": {
        "dev": "set NODE_ENV=development&& concurrently \"yarn dev:vite\" \" yarn dev:electron\"",
        "dev:vite": "vite",
        "dev:electron": "npm run build:electron && electron .",
        "copy-modules": "node -r esm scripts/copy-modules.js",
        "run:module": "bash -c 'echo \"[Module] ${1}\"; node ./modules/${1}/index.js' --",
        "build": "yarn run build:vite && yarn run build:electron",
        "build:vite": "vite build",
        "build:electron": "tsc -p electron",
        "dist": "npm run build && electron-builder",
        "pack": "npm run build && electron-builder --dir",
        "clean": "rimraf dist main src/out",
        "type-check": "tsc",
        "lint": "eslint . --ext js,jsx,ts,tsx",
        "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
        "build:sharp": "bash -c 'echo \"[Building Module]: ${1}\"; cd src-modules/${1}; dotnet publish -r win-x64 //p:PublishSingleFile=true //p:IncludeNativeLibrariesForSelfExtract=true --output \"../../modules/${1}\"; cp package.json module.ui.mdx ../../modules/${1}' --"
    },
    "dependencies": {
        "@mdx-js/mdx": "^2.0.0-rc.2",
        "@mdx-js/react": "^2.1.1",
        "@mdx-js/rollup": "^2.1.1",
        "@vitejs/plugin-react": "^1.2.0",
        "electron-is-dev": "^2.0.0",
        "fft-js": "^0.0.12",
        "fs-extra": "^10.1.0",
        "install": "^0.13.0",
        "naudiodon": "^2.3.6",
        "npm": "^8.12.1",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-icons": "^4.3.1",
        "vite": "^2.8.6",
        "vite-plugin-mdx": "^3.5.10",
        "ws": "^8.5.0"
    },
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.2",
        "@types/node": "^17.0.22",
        "@types/react": "^18.0.9",
        "@types/react-dom": "^18.0.5",
        "@types/ws": "^8.5.3",
        "@typescript-eslint/eslint-plugin": "5.26.0",
        "@typescript-eslint/parser": "5.26.0",
        "autoprefixer": "^10.4.4",
        "concurrently": "^7.0.0",
        "electron": "^19.0.1",
        "electron-builder": "^23.0.3",
        "eslint": "^8.14.0",
        "eslint-config-airbnb": "19.0.4",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-react": "^7.29.4",
        "esm": "^3.2.25",
        "postcss": "^8.4.12",
        "prettier": "2.6.2",
        "tailwindcss": "^3.0.23",
        "typescript": "^4.6.2"
    },
    "build": {
        "asar": true,
        "files": [
            "main",
            "src/out"
        ],
        "directories": {
            "buildResources": "modules"
        },
        "extraFiles": [
            "modules/release"
        ]
    }
}